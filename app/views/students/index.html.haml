%h1 Listing students

%table
  %thead
    %tr
      %th Profile
      %th Reputation
      %th Roles
      %th
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.profile
        %td= student.reputation
        %td= student.roles
        %td= link_to 'Show', student
        %td= link_to 'Edit', edit_student_path(student)
        %td= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }

